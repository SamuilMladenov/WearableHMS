<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offWhiteBg">

    <!-- Top Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/tealPrimary"
        android:title="Health Dashboard"
        android:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Grid Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gridContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/alertBanner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- HEART RATE CARD -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_hr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.45"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/cardStroke"
            app:strokeWidth="2dp">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Heart Rate"
                    android:textStyle="bold"
                    android:textColor="@color/tealPrimary"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/value_hr"
                    android:text="-- BPM"
                    android:textColor="@color/charcoalText"
                    android:textSize="18sp"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- SPO2 CARD -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_spo2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.45"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/cardStroke"
            app:strokeWidth="2dp">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="SpO₂"
                    android:textStyle="bold"
                    android:textColor="@color/tealPrimary"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/value_spo2"
                    android:text="-- %"
                    android:textColor="@color/charcoalText"
                    android:textSize="18sp"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- TEMPERATURE CARD -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_temp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintWidth_percent="0.45"
            app:layout_constraintTop_toBottomOf="@id/card_hr"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/cardStroke"
            app:strokeWidth="2dp">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Temperature"
                    android:textStyle="bold"
                    android:textColor="@color/tealPrimary"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/value_temp"
                    android:text="-- °C"
                    android:textColor="@color/charcoalText"
                    android:textSize="18sp"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- GSR CARD -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_gsr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintWidth_percent="0.45"
            app:layout_constraintTop_toBottomOf="@id/card_spo2"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/cardStroke"
            app:strokeWidth="2dp">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="GSR"
                    android:textStyle="bold"
                    android:textColor="@color/tealPrimary"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/value_gsr"
                    android:text="--"
                    android:textColor="@color/charcoalText"
                    android:textSize="18sp"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- HRV CARD -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_hrv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintWidth_percent="0.45"
            app:layout_constraintTop_toBottomOf="@id/card_temp"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/cardStroke"
            app:strokeWidth="2dp">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="HRV (RMSSD)"
                    android:textStyle="bold"
                    android:textColor="@color/tealPrimary"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/value_hrv"
                    android:text="-- ms"
                    android:textColor="@color/charcoalText"
                    android:textSize="18sp"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- STRESS CARD -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_stress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintWidth_percent="0.45"
            app:layout_constraintTop_toBottomOf="@id/card_gsr"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/cardStroke"
            app:strokeWidth="2dp">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Stress"
                    android:textStyle="bold"
                    android:textColor="@color/tealPrimary"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/value_stress"
                    android:text="--"
                    android:textColor="@color/charcoalText"
                    android:textSize="18sp"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Alert Banner -->
    <TextView
        android:id="@+id/alertBanner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/coralAccent"
        android:padding="16dp"
        android:text="All good"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
